<odoo>
    <record id="view_dns_backend" model="ir.ui.view">
        <field name="name">dns.backend.form</field>
        <field name="model">dns.backend</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Domain"/>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="api_path"/>
                        </group>
                        <group>
                            <field name="version"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="login"/>
                            <field name="password" password="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dns_record" model="ir.ui.view">
        <field name="name">dns.record.form</field>
        <field name="model">dns.record</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dns_record_tree" model="ir.ui.view">
        <field name="name">dns.record.tree</field>
        <field name="model">dns.record</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="name" string="Name"/>
                <field name="value"/>
                <field name="mx_priority"/>
                <field name="ttl"/>
            </tree>
        </field>
    </record>

    <record id="view_dns_backend_tree" model="ir.ui.view">
        <field name="name">dns.backend.tree</field>
        <field name="model">dns.backend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="version"/>
            </tree>
        </field>
    </record>

    <record id="action_dns_backend" model="ir.actions.act_window">
        <field name="name">DNS Backends</field>
        <field name="res_model">dns.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dns_backend_tree"/>
    </record>

    <record id="action_dns_record" model="ir.actions.act_window">
        <field name="name">DNS Records</field>
        <field name="res_model">dns.record</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dns_record_tree"/>
    </record>

    <menuitem id="menu_dns_backend"
              name="DNS Backend"
              parent="connector.menu_connector_root"
              sequence="20"
    />

    <menuitem id="menu_dns_backend_act"
              name="Backend"
              action="dns.action_dns_backend"
              parent="menu_dns_backend"
    />

</odoo>